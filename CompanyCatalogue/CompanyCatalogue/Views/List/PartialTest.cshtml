@{
}

@for (int i = 0; i < Model.Count(); i++)
{@*
    <p>@Model.ElementAt(i).Fullname</p>*@


    <div class="card mb-2" style="display:flex; flex-direction:row;">
        <div style="display:flex; align-items: center; width: 175px; justify-content: center;">
            <img src="~/images/placeholder.png" class="card-img-left" alt="..." style="max-height: 150px; max-width: 150px;">
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">@Model.ElementAt(i).Fullname</h5>
                <p class="card-text">@Model.ElementAt(i).Position</p>
                <p class="card-text">@Model.ElementAt(i).Salary USD</p>
                <p class="card-text">@Model.ElementAt(i).DateOfEmployment</p>
            </div>
        </div>
    </div>

}


